# GitLab Configuration
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_API_URL=https://gitlab.com/api/v4

# Jira Configuration (optional - leave commented out to disable Jira integration)
# ENABLE_JIRA=true
# JIRA_API_URL=https://your-domain.atlassian.net
# JIRA_EMAIL=your-email@example.com
# JIRA_API_TOKEN=your_jira_api_token_here
# JIRA_POLLING_INTERVAL_MS=60000  # How often to check for Jira mentions (default: 60 seconds)
# JIRA_PROJECT_KEYS=PROJ1,PROJ2   # Comma-separated list of project keys to monitor

# OpenCode AI Configuration
OPENCODE_PROVIDER=opencode
OPENCODE_MODEL=glm-4.7-free

# Logging configuration (optional)
# LOG_LEVEL=info  # Options: trace, debug, info, warn, error, fatal

# Bot configuration (optional)
# POLLING_INTERVAL_MS=5000  # How often to check for GitLab mentions (in milliseconds)
# OPENCODE_PORT=            # Port for OpenCode server (default: random between 10000-60000)

# Test configuration (optional - only needed for testing)
GITLAB_TEST_TOKEN=your_test_token_here
GITLAB_TEST_PROJECT=your_project_id_here
# Override provider/model for test-bot.ts (optional)
OPENCODE_TEST_PROVIDER=opencode
OPENCODE_TEST_MODEL=grok-code